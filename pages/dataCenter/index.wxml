<view class="page">
  <view class="first">
    <view class="total-situation">整体情况</view>
    <view class="accumulated-value">截止12:00累计数值</view>
    <view class="total-situation-container">
      <view wx:for="{{total_situation_dataList}}" wx:for-item="item" wx:key="index" class="big-item" style="width: {{itemWidth}};">
        <view class="num-name">{{item.name}}</view>
        <view class="big-num">{{item.number}}</view>
      </view>
    </view>
  </view>

  <view class="second">
    <view class="interaction-situation">互动情况</view>
    <view class="interaction-situation-container">
      <view wx:for="{{interaction_situation_dataList}}" wx:for-item="item" wx:key="index" class="small-item" style="width: {{smallitemWidth}};">
        <view class="num-name">{{item.name}}</view>
        <view class="num-container">
          <view class="small-num">{{item.number}}</view>
          <view class="num-name" style="margin-left: 10rpx; align-self: flex-end;">次</view>
        </view>
      </view>
    </view>
  </view>

  <view class="third">
    <view class="complete-rate">完播率</view>

    <view class="progress">
      <view class="hour-container">
        <view class="per-hour" wx:for="{{complete_rate_dataList}}" wx:for-item="item" wx:key="index" style="height: {{itemHeight}};">{{item.time}}</view>
      </view>
      <view class="progress-container">
        <t-progress wx:for="{{complete_rate_dataList}}" wx:for-item="item" wx:key="index" percentage="{{item.percentage}}"  />
      </view>
    </view>
  </view>

  <view class="forth">
    <view class="complete-rate">按区域统计</view>
  </view>
</view>
